<script>
function calcular(){
let plataformas = parseInt(document.getElementById("plataformas").value);
let superficie = parseInt(document.getElementById("superficie").value);
let eficiencia = parseInt(document.getElementById("eficiencia").value)/100;

let ticksHora = 72000;
let spawnBase = plataformas * superficie * 0.01;
let mobsHora = Math.floor(spawnBase * ticksHora * eficiencia / 1000);

document.getElementById("resultado").innerHTML =
"Producci√≥n estimada: " + mobsHora + " mobs/hora";

let porcentaje = Math.min((mobsHora/10000)*100,100);
document.getElementById("barra").style.width = porcentaje + "%";
}

function mostrarMods(){
let v = document.getElementById("version").value;
let contenido = "";

if(v==="1.20"){
contenido = `
<ul>
<li>Sodium</li>
<li>Lithium</li>
<li>Carpet Mod</li>
<li>MiniHUD</li>
</ul>`;
}else{
contenido = `
<ul>
<li>Sodium</li>
<li>Litematica</li>
<li>MiniHUD</li>
<li>Iris Shaders</li>
</ul>`;
}

document.getElementById("lista-mods").innerHTML = contenido;
}

mostrarMods();
</script>

